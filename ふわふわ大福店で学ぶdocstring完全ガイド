        product = None
        for p in self.inventory:
            if p.id == product_id:
                product = p
                break
        
        if not product:
            print(f"âŒ ID:{product_id}ã®å•†å“ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“")
            return False
        
