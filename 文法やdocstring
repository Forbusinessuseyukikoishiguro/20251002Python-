matrix2[0][0] = 999

print(matrix1)  # [[1, 2], [3, 4]] â† å¤‰ã‚ã‚‰ãªã„ï¼
print(matrix2)  # [[999, 2], [3, 4]]


# âœ… é–¢æ•°å†…ã§å…ƒã®ãƒªã‚¹ãƒˆã‚’å¤‰æ›´ã—ãªã„
def add_item_safe(items):
    """ã‚¢ã‚¤ãƒ†ãƒ ã‚’è¿½åŠ ã™ã‚‹ï¼ˆå®‰å…¨ãªä¾‹ï¼‰"""
    new_items = items.copy()  # â† ã‚³ãƒ”ãƒ¼ã‚’ä½œã‚‹
    new_items.append(999)
    return new_items

my_list = [1, 2, 3]
result = add_item_safe(my_list)

print(my_list)  # [1, 2, 3] â† å¤‰ã‚ã‚‰ãªã„
print(result)   # [1, 2, 3, 999]

