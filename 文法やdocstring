def calculate_total(items):
    """åˆè¨ˆã‚’è¨ˆç®—ã™ã‚‹"""
    total = 0
    for item in items:
        total += item      # â† 4ã‚¹ãƒšãƒ¼ã‚¹
        print(total)       # â† 4ã‚¹ãƒšãƒ¼ã‚¹
    return total


# âœ… ãƒã‚¹ãƒˆã—ãŸãƒ–ãƒ­ãƒƒã‚¯ã¯ã•ã‚‰ã«4ã‚¹ãƒšãƒ¼ã‚¹
def sell_daifuku(quantity, stock):
    """å¤§ç¦ã‚’è²©å£²ã™ã‚‹"""
    if quantity > 0:                    # â† 4ã‚¹ãƒšãƒ¼ã‚¹
        if quantity <= stock:           # â† 8ã‚¹ãƒšãƒ¼ã‚¹ï¼ˆãƒã‚¹ãƒˆï¼‰
            price = 150
            total = quantity * price    # â† 12ã‚¹ãƒšãƒ¼ã‚¹ï¼ˆã•ã‚‰ã«ãƒã‚¹ãƒˆï¼‰
            return total
        else:
            return None                 # â† 12ã‚¹ãƒšãƒ¼ã‚¹
    else:
        raise ValueError("å€‹æ•°ã¯1ä»¥ä¸Š")  # â† 8ã‚¹ãƒšãƒ¼ã‚¹

