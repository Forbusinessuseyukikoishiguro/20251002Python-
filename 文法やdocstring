# âœ… è¾æ›¸ã‚‚åŒæ§˜
def create_shop(name, data=None):
    """åº—èˆ—ã‚’ä½œæˆã™ã‚‹ï¼ˆæ­£ã—ã„ä¾‹ï¼‰"""
    if data is None:
        data = {}  # â† é–¢æ•°ãŒå‘¼ã°ã‚Œã‚‹ãŸã³ã«æ–°ã—ã„è¾æ›¸
    data['name'] = name
    return data

shop1 = create_shop("ã†ã•ã†ã•åº—")
shop2 = create_shop("ã‚‚ã¡ã‚‚ã¡åº—")

print(shop1)  # {'name': 'ã†ã•ã†ã•åº—'} â† æ­£ã—ã„ï¼
print(shop2)  # {'name': 'ã‚‚ã¡ã‚‚ã¡åº—'} â† æ­£ã—ã„ï¼


# âœ… ä¸å¤‰ã‚ªãƒ–ã‚¸ã‚§ã‚¯ãƒˆãªã‚‰OK
def greet(name, greeting="ã“ã‚“ã«ã¡ã¯"):
    """æŒ¨æ‹¶ã™ã‚‹ï¼ˆæ–‡å­—åˆ—ã¯OKï¼‰"""
    return f"{greeting}ã€{name}ã•ã‚“"

print(greet("ã†ã•ã†ã•"))           # ã“ã‚“ã«ã¡ã¯ã€ã†ã•ã†ã•ã•ã‚“
print(greet("ã‚‚ã¡ã‚‚ã¡", "ãŠã¯ã‚ˆã†"))  # ãŠã¯ã‚ˆã†ã€ã‚‚ã¡ã‚‚ã¡ã•ã‚“


# âœ… æ•°å€¤ã‚‚OK
def calculate(x, multiplier=2):
    """è¨ˆç®—ã™ã‚‹ï¼ˆæ•°å€¤ã¯OKï¼‰"""
    return x * multiplier

print(calculate(5))     # 10
print(calculate(5, 3))  # 15

