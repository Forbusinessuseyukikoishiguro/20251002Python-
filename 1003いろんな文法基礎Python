__version__ = "1.0.0"

# ãƒ‘ãƒƒã‚±ãƒ¼ã‚¸ã®èª¬æ˜
__author__ = "ã†ã•ã†ã•åº—é•·"

# ãƒ‘ãƒƒã‚±ãƒ¼ã‚¸ãƒ¬ãƒ™ãƒ«ã®å¤‰æ•°
SHOP_NAME = "ãµã‚ãµã‚å¤§ç¦åº—"

# ã‚ˆãä½¿ã†ã‚‚ã®ã‚’ç›´æ¥ã‚¤ãƒ³ãƒãƒ¼ãƒˆã§ãã‚‹ã‚ˆã†ã«ã™ã‚‹
