    def __init__(self, name):  # __init__ (ã‚¢ãƒ³ãƒ€ãƒ¼ã‚¹ã‚³ã‚¢2ã¤ãšã¤)
        self.name = name


# === é–“é•ã„4: ãƒ¡ã‚½ãƒƒãƒ‰å‘¼ã³å‡ºã—æ™‚ã«selfã‚’æ¸¡ã™ ===

# âŒ é–“é•ã„
d = Daifuku("ã„ã¡ã”å¤§ç¦", 250)
d.show_info(d)  # selfã‚’æ˜ç¤ºçš„ã«æ¸¡ã™å¿…è¦ã¯ãªã„

# âœ… æ­£ã—ã„
d = Daifuku("ã„ã¡ã”å¤§ç¦", 250)
d.show_info()  # selfã¯è‡ªå‹•çš„ã«æ¸¡ã•ã‚Œã‚‹


# === é–“é•ã„5: ã‚¯ãƒ©ã‚¹å¤‰æ•°ã¨ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹å¤‰æ•°ã®æ··åŒ ===

# âŒ é–“é•ã„ï¼ˆæ„å›³ã—ãªã„å‹•ä½œï¼‰
class Daifuku:
    ingredients = []  # ã‚¯ãƒ©ã‚¹å¤‰æ•°ï¼ˆå…¨ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹ã§å…±æœ‰ï¼‰
    
    def __init__(self, name):
        self.name = name
    
    def add_ingredient(self, ingredient):
        self.ingredients.append(ingredient)  # å…¨ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹ã«å½±éŸ¿ï¼

d1 = Daifuku("ã„ã¡ã”å¤§ç¦")
d2 = Daifuku("æŠ¹èŒ¶å¤§ç¦")

d1.add_ingredient("ã„ã¡ã”")
d2.add_ingredient("æŠ¹èŒ¶")

print(d1.ingredients)  # ['ã„ã¡ã”', 'æŠ¹èŒ¶'] â† d2ã®ææ–™ã‚‚å…¥ã£ã¦ã‚‹ï¼
print(d2.ingredients)  # ['ã„ã¡ã”', 'æŠ¹èŒ¶'] â† d1ã®ææ–™ã‚‚å…¥ã£ã¦ã‚‹ï¼

# âœ… æ­£ã—ã„
class Daifuku:
    def __init__(self, name):
        self.name = name
        self.ingredients = []  # ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹å¤‰æ•°ï¼ˆå„ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹ã§ç‹¬ç«‹ï¼‰
    
    def add_ingredient(self, ingredient):
        self.ingredients.append(ingredient)

d1 = Daifuku("ã„ã¡ã”å¤§ç¦")
d2 = Daifuku("æŠ¹èŒ¶å¤§ç¦")

d1.add_ingredient("ã„ã¡ã”")
d2.add_ingredient("æŠ¹èŒ¶")

print(d1.ingredients)  # ['ã„ã¡ã”'] â† d1ã ã‘
print(d2.ingredients)  # ['æŠ¹èŒ¶'] â† d2ã ã‘


# === é–“é•ã„6: ã‚¯ãƒ©ã‚¹åã§å‘¼ã¶ã¹ããƒ¡ã‚½ãƒƒãƒ‰ã‚’ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹ã§å‘¼ã¶ ===

# âŒ é–“é•ã„ï¼ˆå‹•ããŒéæ¨å¥¨ï¼‰
class Daifuku:
    @classmethod
    def show_store(cls):
        print("ãµã‚ãµã‚å¤§ç¦åº—")

d = Daifuku()
d.show_store()  # ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹çµŒç”±ï¼ˆæ··ä¹±ã‚’æ‹›ãï¼‰

# âœ… æ­£ã—ã„
Daifuku.show_store()  # ã‚¯ãƒ©ã‚¹ãƒ¡ã‚½ãƒƒãƒ‰ã¯ã‚¯ãƒ©ã‚¹åã§å‘¼ã¶
```

