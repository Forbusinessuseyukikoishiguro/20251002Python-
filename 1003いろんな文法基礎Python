## 9ï¸âƒ£ ç·åˆå®Ÿè·µä¾‹ï¼šãµã‚ãµã‚å¤§ç¦åº—ã‚·ã‚¹ãƒ†ãƒ 

```python
# === è¦ªã‚¯ãƒ©ã‚¹ ===
class Product:
    """å•†å“ã®åŸºæœ¬ã‚¯ãƒ©ã‚¹ï¼ˆæœ€ã‚‚æŠ½è±¡çš„ï¼‰"""
    
    total_products = 0  # ã‚¯ãƒ©ã‚¹å¤‰æ•°ï¼šä½œã£ãŸå•†å“ã®ç·æ•°
    
    def __init__(self, name, price, category):
        self.name = name  # å•†å“å
        self.price = price  # ä¾¡æ ¼
        self.category = category  # ã‚«ãƒ†ã‚´ãƒª
        
        Product.total_products += 1  # ç·æ•°ã‚’å¢—ã‚„ã™
        self.product_id = Product.total_products  # IDä»˜ä¸
        
        print(f"âœ¨ å•†å“ID:{self.product_id} {name}ã‚’ç™»éŒ²")
    
    def show_info(self):
        """åŸºæœ¬æƒ…å ±è¡¨ç¤º"""
        print(f"[ID:{self.product_id}] {self.name}")
        print(f"  ä¾¡æ ¼: Â¥{self.price}")
        print(f"  ã‚«ãƒ†ã‚´ãƒª: {self.category}")
    
    def calculate_total(self, quantity):
        """åˆè¨ˆé‡‘é¡ã‚’è¨ˆç®—"""
        return self.price * quantity

# === å­ã‚¯ãƒ©ã‚¹1 ===
class Daifuku(Product):
    """å¤§ç¦ã‚¯ãƒ©ã‚¹"""
    
    def __init__(self, name, price, filling, weight):
        super().__init__(name, price, "å¤§ç¦")  # è¦ªã®åˆæœŸåŒ–
        self.filling = filling  # é¤¡ã®ç¨®é¡
        self.weight = weight  # é‡ã•
    
    def show_info(self):  # ã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰
        """å¤§ç¦ç”¨ã®è¡¨ç¤º"""
        super().show_info()  # è¦ªã®ãƒ¡ã‚½ãƒƒãƒ‰ã‚’å‘¼ã¶

```python
        print(f"  é¤¡: {self.filling}")
        print(f"  é‡ã•: {self.weight}g")
    
    def taste(self):
        """å‘³ã‚ã†"""
        return f"ã‚‚ã¡ã‚‚ã¡é£Ÿæ„Ÿï¼{self.filling}ãŒç¾å‘³ã—ã„ï¼"

# === å­ã‚¯ãƒ©ã‚¹2 ===
class PremiumDaifuku(Daifuku):
    """ãƒ—ãƒ¬ãƒŸã‚¢ãƒ å¤§ç¦ï¼ˆDaifukuã‚’ç¶™æ‰¿ï¼‰"""
    
    def __init__(self, name, price, filling, weight, special_ingredient):
        super().__init__(name, price, filling, weight)  # è¦ªã®åˆæœŸåŒ–
        self.special_ingredient = special_ingredient  # ç‰¹åˆ¥ãªææ–™
        self.is_limited = True  # é™å®šå“
    
    def show_info(self):  # ã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰
        """ãƒ—ãƒ¬ãƒŸã‚¢ãƒ å¤§ç¦ç”¨ã®è¡¨ç¤º"""
        super().show_info()  # è¦ªï¼ˆDaifukuï¼‰ã®ãƒ¡ã‚½ãƒƒãƒ‰
        print(f"  âœ¨ç‰¹åˆ¥ãªææ–™: {self.special_ingredient}")
        print(f"  ğŸŒŸé™å®šå•†å“")
    
    def taste(self):  # ã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰
        """ãƒ—ãƒ¬ãƒŸã‚¢ãƒ ãªå‘³ã‚ã„"""
        return f"é«˜ç´šã‚‚ã¡ã‚‚ã¡ï¼{self.filling}ã¨{self.special_ingredient}ã®è´…æ²¢ãªå‘³ã‚ã„ï¼"
    
    def gift_wrap(self):
        """ã‚®ãƒ•ãƒˆåŒ…è£…ï¼ˆãƒ—ãƒ¬ãƒŸã‚¢ãƒ é™å®šï¼‰"""
        return f"ğŸ {self.name}ã‚’é«˜ç´šæ¡ç®±ã«å…¥ã‚Œã¦ãƒªãƒœãƒ³ã‚’ã‹ã‘ã¾ã—ãŸ"

# === å­ã‚¯ãƒ©ã‚¹3 ===
class IceDaifuku(Daifuku):
    """ã‚¢ã‚¤ã‚¹å¤§ç¦"""
    
    def __init__(self, name, price, filling, weight, ice_flavor):
        super().__init__(name, price, filling, weight)
        self.ice_flavor = ice_flavor  # ã‚¢ã‚¤ã‚¹ã®å‘³
        self.frozen = True  # å†·å‡çŠ¶æ…‹
    
    def show_info(self):  # ã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰
        """ã‚¢ã‚¤ã‚¹å¤§ç¦ç”¨ã®è¡¨ç¤º"""
        super().show_info()  # è¦ªã®ãƒ¡ã‚½ãƒƒãƒ‰
        print(f"  ğŸ§Šã‚¢ã‚¤ã‚¹: {self.ice_flavor}")
        print(f"  å†·å‡çŠ¶æ…‹: {'ã¯ã„' if self.frozen else 'ã„ã„ãˆ'}")
    
    def taste(self):  # ã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰
        """ã‚¢ã‚¤ã‚¹å¤§ç¦ã®å‘³ã‚ã„"""
        if self.frozen:
            return f"ã²ã‚“ã‚„ã‚Šå†·ãŸã„ï¼{self.ice_flavor}ã‚¢ã‚¤ã‚¹ã¨ã‚‚ã¡ã‚‚ã¡ã®çµ¶å¦™ãªãƒãƒ¼ãƒ¢ãƒ‹ãƒ¼ï¼"
        else:
            return f"æº¶ã‘ã¦ã—ã¾ã„ã¾ã—ãŸ..."
    
    def defrost(self):
        """è§£å‡"""
        if self.frozen:
            print(f"ğŸŒ¡ï¸ {self.name}ã‚’å°‘ã—è§£å‡ã—ã¾ã—ãŸ")
            self.frozen = False
        else:
            print("æ—¢ã«è§£å‡æ¸ˆã¿ã§ã™")

# === åº—é•·ã‚¯ãƒ©ã‚¹ ===
class StoreManager:
    """ã†ã•ã†ã•åº—é•·ã‚¯ãƒ©ã‚¹"""
    
    def __init__(self, name):
        self.name = name  # åº—é•·ã®åå‰
        self.inventory = []  # åœ¨åº«ãƒªã‚¹ãƒˆ
        print(f"ğŸ° {name}ãŒåº—é•·ã«å°±ä»»ã—ã¾ã—ãŸï¼\n")
    
    def add_product(self, product):
        """å•†å“ã‚’åœ¨åº«ã«è¿½åŠ """
        self.inventory.append(product)  # ãƒªã‚¹ãƒˆã«è¿½åŠ 
        print(f"ğŸ“¦ {product.name}ã‚’åœ¨åº«ã«è¿½åŠ ã—ã¾ã—ãŸ\n")
    
    def show_all_products(self):
        """å…¨å•†å“ã‚’è¡¨ç¤º"""
        print(f"\n{'='*50}")
        print(f"ğŸª ãµã‚ãµã‚å¤§ç¦åº— åœ¨åº«ä¸€è¦§")
        print(f"   åº—é•·: {self.name}")
        print(f"{'='*50}\n")
        
        if not self.inventory:  # åœ¨åº«ãŒç©º
            print("åœ¨åº«ãŒã‚ã‚Šã¾ã›ã‚“")
            return
        
        for product in self.inventory:  # å„å•†å“ã‚’è¡¨ç¤º
            product.show_info()  # ãƒãƒªãƒ¢ãƒ¼ãƒ•ã‚£ã‚ºãƒ ï¼
            print()
    
    def serve_customer(self, product, quantity=1):
        """ãŠå®¢æ§˜ã«æä¾›ï¼ˆãƒãƒªãƒ¢ãƒ¼ãƒ•ã‚£ã‚ºãƒ ã®æ´»ç”¨ï¼‰"""
        print(f"\nğŸ° {self.name}: ã„ã‚‰ã£ã—ã‚ƒã„ã¾ã›ï¼")
        print(f"   {product.name}ã‚’{quantity}å€‹ã”æ³¨æ–‡ã§ã™ã­")
        
        # åˆè¨ˆé‡‘é¡ã‚’è¨ˆç®—
        total = product.calculate_total(quantity)
        print(f"   åˆè¨ˆ: Â¥{total}")
        
        # å‘³ã®èª¬æ˜ï¼ˆãƒãƒªãƒ¢ãƒ¼ãƒ•ã‚£ã‚ºãƒ ï¼‰
        taste_comment = product.taste()  # å‹ã«ã‚ˆã£ã¦ç•°ãªã‚‹å‹•ä½œ
        print(f"   {taste_comment}")
        
        # ãƒ—ãƒ¬ãƒŸã‚¢ãƒ å•†å“ãªã‚‰ã‚®ãƒ•ãƒˆåŒ…è£…ã‚’ææ¡ˆ
        if isinstance(product, PremiumDaifuku):
            wrap_msg = product.gift_wrap()
            print(f"   {wrap_msg}")
        
        print(f"   ã‚ã‚ŠãŒã¨ã†ã”ã–ã„ã¾ã—ãŸï¼ğŸ°\n")
    
    def recommend_by_category(self, category):
        """ã‚«ãƒ†ã‚´ãƒªåˆ¥ã®ãŠã™ã™ã‚"""
        print(f"\nğŸ’¡ {category}ã®ãŠã™ã™ã‚å•†å“:")
        found = False  # è¦‹ã¤ã‹ã£ãŸã‹ã®ãƒ•ãƒ©ã‚°
        
        for product in self.inventory:
            if product.category == category:  # ã‚«ãƒ†ã‚´ãƒªãŒä¸€è‡´
                print(f"  ãƒ»{product.name} Â¥{product.price}")
                found = True
        
        if not found:
            print(f"  {category}ã®å•†å“ã¯ã‚ã‚Šã¾ã›ã‚“")
        print()

# === å®Ÿéš›ã®é‹ç”¨ ===
print("="*60)
print("ğŸª ãµã‚ãµã‚å¤§ç¦åº— ã‚ªãƒ¼ãƒ—ãƒ³ï¼")
print("="*60)
print()

# ã†ã•ã†ã•åº—é•·ã‚’ä½œæˆ
usausa = StoreManager("ã†ã•ã†ã•")

# é€šå¸¸ã®å¤§ç¦ã‚’ä½œæˆ
normal1 = Daifuku("ã‚ã‚“ã“å¤§ç¦", 200, "ç²’ã‚ã‚“", 45)
normal2 = Daifuku("æŠ¹èŒ¶å¤§ç¦", 230, "ç™½ã‚ã‚“", 43)

# ãƒ—ãƒ¬ãƒŸã‚¢ãƒ å¤§ç¦ã‚’ä½œæˆ
premium1 = PremiumDaifuku("é‡‘ç®”ã„ã¡ã”å¤§ç¦", 500, "ã„ã¡ã”é¤¡", 50, "é‡‘ç®”")
premium2 = PremiumDaifuku("ãƒˆãƒªãƒ¥ãƒ•ãƒãƒ§ã‚³å¤§ç¦", 800, "ç”Ÿãƒãƒ§ã‚³", 55, "ãƒˆãƒªãƒ¥ãƒ•")

# ã‚¢ã‚¤ã‚¹å¤§ç¦ã‚’ä½œæˆ
ice1 = IceDaifuku("ãƒãƒ‹ãƒ©ã‚¢ã‚¤ã‚¹å¤§ç¦", 300, "ã‚«ã‚¹ã‚¿ãƒ¼ãƒ‰", 60, "ãƒãƒ‹ãƒ©")
ice2 = IceDaifuku("æŠ¹èŒ¶ã‚¢ã‚¤ã‚¹å¤§ç¦", 320, "æŠ¹èŒ¶ã‚ã‚“", 60, "æŠ¹èŒ¶")

# åœ¨åº«ã«è¿½åŠ 
usausa.add_product(normal1)
usausa.add_product(normal2)
usausa.add_product(premium1)
usausa.add_product(premium2)
usausa.add_product(ice1)
usausa.add_product(ice2)

# å…¨å•†å“ã‚’è¡¨ç¤º
usausa.show_all_products()

# ãŠå®¢æ§˜ã®æ¥å®¢ï¼ˆãƒãƒªãƒ¢ãƒ¼ãƒ•ã‚£ã‚ºãƒ ã®å®Ÿè·µï¼‰
print("\n" + "="*60)
print("ğŸ‘¥ ãŠå®¢æ§˜ã®æ¥å®¢")
print("="*60)

# é€šå¸¸ã®å¤§ç¦
usausa.serve_customer(normal1, 2)

# ãƒ—ãƒ¬ãƒŸã‚¢ãƒ å¤§ç¦ï¼ˆç‰¹åˆ¥ãªå‡¦ç†ãŒè‡ªå‹•çš„ã«å®Ÿè¡Œã•ã‚Œã‚‹ï¼‰
usausa.serve_customer(premium1, 1)

# ã‚¢ã‚¤ã‚¹å¤§ç¦
usausa.serve_customer(ice1, 3)

# ã‚¢ã‚¤ã‚¹å¤§ç¦ã‚’è§£å‡ã—ã¦ã‹ã‚‰ã‚‚ã†ä¸€åº¦
print("\n--- ã‚¢ã‚¤ã‚¹å¤§ç¦ã®çŠ¶æ…‹å¤‰æ›´ ---")
ice1.defrost()  # è§£å‡
usausa.serve_customer(ice1, 1)  # å†åº¦æä¾›

# ã‚«ãƒ†ã‚´ãƒªåˆ¥ãŠã™ã™ã‚
usausa.recommend_by_category("å¤§ç¦")

# === çµ±è¨ˆæƒ…å ± ===
print("\n" + "="*60)
print("ğŸ“Š çµ±è¨ˆæƒ…å ±")
print("="*60)
print(f"ç™»éŒ²å•†å“ç·æ•°: {Product.total_products}å€‹")
print(f"åœ¨åº«å•†å“æ•°: {len(usausa.inventory)}å€‹")

# å¹³å‡ä¾¡æ ¼ã‚’è¨ˆç®—
if usausa.inventory:
    avg_price = sum(p.price for p in usausa.inventory) / len(usausa.inventory)
    print(f"å¹³å‡ä¾¡æ ¼: Â¥{avg_price:.0f}")

# æœ€é«˜é¡ãƒ»æœ€ä½é¡ã®å•†å“
if usausa.inventory:
    most_expensive = max(usausa.inventory, key=lambda p: p.price)
    cheapest = min(usausa.inventory, key=lambda p: p.price)
    print(f"æœ€é«˜é¡å•†å“: {most_expensive.name} Â¥{most_expensive.price}")
    print(f"æœ€ä½é¡å•†å“: {cheapest.name} Â¥{cheapest.price}")

print("\n" + "="*60)
