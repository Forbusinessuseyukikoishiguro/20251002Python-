products = [
    Daifuku("ã„ã¡ã”å¤§ç¦", 250, 48, "ã„ã¡ã”é¤¡"),
    Daifuku("æŠ¹èŒ¶å¤§ç¦", 230, 45, "ç™½ã‚ã‚“"),
    Daifuku("ã‚ã‚“ã“å¤§ç¦", 200, 43, "ç²’ã‚ã‚“"),
    Daifuku("ãƒãƒ§ã‚³å¤§ç¦", 280, 50, "ç”Ÿãƒãƒ§ã‚³"),
    Daifuku("ããªã“å¤§ç¦", 220, 44, "ããªã“é¤¡")
