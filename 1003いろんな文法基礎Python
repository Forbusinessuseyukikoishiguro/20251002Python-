### ğŸ“„ shop/models/product.py

```python
# shop/models/product.py
"""
å•†å“ã®åŸºæœ¬ãƒ¢ãƒ‡ãƒ«
"""

class Product:
    """å•†å“ã®åŸºåº•ã‚¯ãƒ©ã‚¹"""
    
    _id_counter = 0  # ã‚¯ãƒ©ã‚¹å¤‰æ•°ï¼ˆIDç”Ÿæˆç”¨ï¼‰
    
    def __init__(self, name, price, category):
        """å•†å“ã‚’åˆæœŸåŒ–"""
        Product._id_counter += 1
        self.id = Product._id_counter  # è‡ªå‹•ã§IDã‚’ä»˜ä¸
        self.name = name  # å•†å“å
        self.price = price  # ä¾¡æ ¼
        self.category = category  # ã‚«ãƒ†ã‚´ãƒª
        self.stock = 0  # åœ¨åº«æ•°
    
    def __str__(self):
        """æ–‡å­—åˆ—è¡¨ç¾"""
        return f"[{self.id:03d}] {self.name} Â¥{self.price}"
    
    def __repr__(self):
        """å…¬å¼è¡¨ç¾"""
        return f"Product(id={self.id}, name='{self.name}', price={self.price})"
    
    def add_stock(self, quantity):
        """åœ¨åº«è¿½åŠ """
        if quantity <= 0:
            raise ValueError("è¿½åŠ æ•°ã¯æ­£ã®æ•°ã§ã‚ã‚‹å¿…è¦ãŒã‚ã‚Šã¾ã™")
        self.stock += quantity
        return self.stock
    
    def reduce_stock(self, quantity):
        """åœ¨åº«æ¸›å°‘"""
        if quantity <= 0:
            raise ValueError("æ¸›å°‘æ•°ã¯æ­£ã®æ•°ã§ã‚ã‚‹å¿…è¦ãŒã‚ã‚Šã¾ã™")
        if quantity > self.stock:
            raise ValueError("åœ¨åº«ãŒè¶³ã‚Šã¾ã›ã‚“")
        self.stock -= quantity
        return self.stock
    
    def is_low_stock(self, threshold=5):
        """åœ¨åº«ãŒå°‘ãªã„ã‹"""
        return self.stock < threshold
    
    def to_dict(self):
        """è¾æ›¸ã«å¤‰æ›"""
        return {
            "id": self.id,
            "name": self.name,
            "price": self.price,
            "category": self.category,
            "stock": self.stock
        }
```

---

### ğŸ“„ shop/models/daifuku.py

```python
# shop/models/daifuku.py
"""
å¤§ç¦ãƒ¢ãƒ‡ãƒ«
"""

from .product import Product  # ç›¸å¯¾ã‚¤ãƒ³ãƒãƒ¼ãƒˆ

class Daifuku(Product):
    """å¤§ç¦ã‚¯ãƒ©ã‚¹"""
    
    def __init__(self, name, price, filling, weight=45):
        """å¤§ç¦ã‚’åˆæœŸåŒ–"""
        super().__init__(name, price, "å¤§ç¦")  # è¦ªã‚¯ãƒ©ã‚¹åˆæœŸåŒ–
        self.filling = filling  # é¤¡ã®ç¨®é¡
        self.weight = weight  # é‡ã•ï¼ˆgï¼‰
    
    def __str__(self):
        """æ–‡å­—åˆ—è¡¨ç¾"""
        return f"[{self.id:03d}] {self.name} ({self.filling}) Â¥{self.price}"
    
    def to_dict(self):
        """è¾æ›¸ã«å¤‰æ›ï¼ˆè¦ªã®ãƒ¡ã‚½ãƒƒãƒ‰ã‚’æ‹¡å¼µï¼‰"""
        data = super().to_dict()  # è¦ªã®ãƒ¡ã‚½ãƒƒãƒ‰ã‚’å‘¼ã¶
        data.update({  # è¿½åŠ æƒ…å ±
            "filling": self.filling,
            "weight": self.weight
        })
        return data
    
    def calculate_price_per_gram(self):
        """ã‚°ãƒ©ãƒ å˜ä¾¡ã‚’è¨ˆç®—"""
        return self.price / self.weight
```

---

### ğŸ“„ shop/services/inventory.py

```python
# shop/services/inventory.py
"""
åœ¨åº«ç®¡ç†ã‚µãƒ¼ãƒ“ã‚¹
"""

class InventoryManager:
    """åœ¨åº«ç®¡ç†ã‚¯ãƒ©ã‚¹"""
    
    def __init__(self):
        """åˆæœŸåŒ–"""
        self.products = []  # å•†å“ãƒªã‚¹ãƒˆ
    
    def add_product(self, product):
        """å•†å“ã‚’è¿½åŠ """
        self.products.append(product)
        return len(self.products)
    
    def remove_product(self, product_id):
        """å•†å“ã‚’å‰Šé™¤"""
        for i, product in enumerate(self.products):
            if product.id == product_id:
                removed = self.products.pop(i)
                return removed
        return None
    
    def find_by_id(self, product_id):
        """IDã§æ¤œç´¢"""
        for product in self.products:
            if product.id == product_id:
                return product
        return None
    
    def find_by_name(self, name):
        """åå‰ã§æ¤œç´¢"""
        results = []
        for product in self.products:
            if name.lower() in product.name.lower():
                results.append(product)
        return results
    
    def get_all(self):
        """ã™ã¹ã¦ã®å•†å“ã‚’å–å¾—"""
        return self.products.copy()
    
    def get_by_category(self, category):
        """ã‚«ãƒ†ã‚´ãƒªã§çµã‚Šè¾¼ã¿"""
        return [p for p in self.products if p.category == category]
    
    def get_low_stock_products(self, threshold=5):
        """åœ¨åº«ãŒå°‘ãªã„å•†å“ã‚’å–å¾—"""
        return [p for p in self.products if p.is_low_stock(threshold)]
    
    def get_total_value(self):
        """åœ¨åº«ã®ç·é¡ã‚’è¨ˆç®—"""
        return sum(p.price * p.stock for p in self.products)
    
    def show_inventory(self):
        """åœ¨åº«ä¸€è¦§ã‚’è¡¨ç¤º"""
        print("\n" + "="*60)
        print("ğŸ“¦ åœ¨åº«ä¸€è¦§")
        print("="*60)
        
        if not self.products:
            print("åœ¨åº«ãªã—")
            return
        
        for product in self.products:
            stock_status = "âš ï¸" if product.is_low_stock() else "âœ…"
            print(f"{stock_status} {product} (åœ¨åº«: {product.stock})")
        
        print("-"*60)
        print(f"å•†å“æ•°: {len(self.products)}ç‚¹")
        print(f"åœ¨åº«ç·é¡: Â¥{self.get_total_value():,}")
        print("="*60)
```

---

### ğŸ“„ shop/services/sales.py

```python
# shop/services/sales.py
"""
è²©å£²ã‚µãƒ¼ãƒ“ã‚¹
"""

import datetime

class SalesManager:
    """è²©å£²ç®¡ç†ã‚¯ãƒ©ã‚¹"""
    
    def __init__(self, inventory_manager):
        """åˆæœŸåŒ–"""
        self.inventory = inventory_manager  # åœ¨åº«ç®¡ç†
        self.sales_history = []  # è²©å£²å±¥æ­´
    
    def sell_product(self, product_id, quantity=1, customer_name=""):
        """å•†å“ã‚’è²©å£²"""
        # å•†å“ã‚’æ¤œç´¢
        product = self.inventory.find_by_id(product_id)
        if not product:
            return {"success": False, "message": "å•†å“ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“"}
        
        # åœ¨åº«ãƒã‚§ãƒƒã‚¯
        if product.stock < quantity:
            return {
                "success": False,
                "message": f"åœ¨åº«ä¸è¶³ï¼ˆåœ¨åº«: {product.stock}å€‹ï¼‰"
            }
        
        # åœ¨åº«ã‚’æ¸›ã‚‰ã™
        try:
            product.reduce_stock(quantity)
        except ValueError as e:
            return {"success": False, "message": str(e)}
        
        # è²©å£²è¨˜éŒ²
        sale = {
            "date": datetime.datetime.now(),
            "product_id": product.id,
            "product_name": product.name,
            "price": product.price,
            "quantity": quantity,
            "total": product.price * quantity,
            "customer": customer_name
        }
        self.sales_history.append(sale)
        
        return {
            "success": True,
            "message": f"{product.name} Ã— {quantity}å€‹ã‚’è²©å£²ã—ã¾ã—ãŸ",
            "sale": sale
        }
    
    def get_sales_total(self):
        """å£²ä¸Šåˆè¨ˆ"""
        return sum(sale["total"] for sale in self.sales_history)
    
    def get_sales_count(self):
        """è²©å£²æ•°"""
        return len(self.sales_history)
    
    def get_today_sales(self):
        """ä»Šæ—¥ã®å£²ä¸Š"""
        today = datetime.date.today()
        today_sales = [
            sale for sale in self.sales_history
            if sale["date"].date() == today
        ]
        return sum(sale["total"] for sale in today_sales)
    
    def show_sales_report(self):
        """è²©å£²ãƒ¬ãƒãƒ¼ãƒˆ"""
        print("\n" + "="*60)
        print("ğŸ’° è²©å£²ãƒ¬ãƒãƒ¼ãƒˆ")
        print("="*60)
        
        if not self.sales_history:
            print("è²©å£²å±¥æ­´ãªã—")
            return
        
        print(f"ç·å£²ä¸Š: Â¥{self.get_sales_total():,}")
        print(f"è²©å£²ä»¶æ•°: {self.get_sales_count()}ä»¶")
        print(f"ä»Šæ—¥ã®å£²ä¸Š: Â¥{self.get_today_sales():,}")
        
        print("\n--- æœ€è¿‘ã®è²©å£² ---")
        for sale in self.sales_history[-5:]:  # æœ€æ–°5ä»¶
            date_str = sale["date"].strftime("%m/%d %H:%M")
            print(f"{date_str} {sale['product_name']} Ã— {sale['quantity']} = Â¥{sale['total']:,}")
        
        print("="*60)
```

