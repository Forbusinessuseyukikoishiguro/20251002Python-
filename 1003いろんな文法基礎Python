## 5ï¸âƒ£ å®Ÿè·µæ¼”ç¿’ï¼šãµã‚ãµã‚å¤§ç¦åº—å®Œå…¨ç‰ˆ

```python
# === è¦ªã‚¯ãƒ©ã‚¹ï¼ˆæœ€ä¸Šä½ï¼‰ ===
class Product:
    """å•†å“ã®åŸºåº•ã‚¯ãƒ©ã‚¹"""
    
    total_count = 0  # å…¨å•†å“ã®ç·æ•°
    
    def __init__(self, name, price, category):
        Product.total_count += 1
        self.id = Product.total_count
        self.name = name
        self.price = price
        self.category = category
        self.stock = 0
    
    def __str__(self):
        return f"[{self.id:03d}] {self.name} Â¥{self.price}"
    
    def show_info(self):
        """å•†å“æƒ…å ±ï¼ˆåŸºæœ¬ï¼‰"""
        print(f"ID: {self.id:03d}")
        print(f"å•†å“: {self.name}")
        print(f"ä¾¡æ ¼: Â¥{self.price}")
        print(f"ã‚«ãƒ†ã‚´ãƒª: {self.category}")
    
    def serve(self):
        """æä¾›æ–¹æ³•ï¼ˆåŸºæœ¬ï¼‰"""
        return f"{self.name}ã‚’ãŠå‡ºã—ã—ã¾ã™"


# === å­ã‚¯ãƒ©ã‚¹1 ===
class Daifuku(Product):
    """å¤§ç¦ã‚¯ãƒ©ã‚¹"""
    
    def __init__(self, name, price, filling, weight):
        super().__init__(name, price, "å¤§ç¦")
        self.filling = filling
        self.weight = weight
    
    def show_info(self):
        """å¤§ç¦ã®æƒ…å ±ï¼ˆã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ï¼‰"""
        super().show_info()  # è¦ªã®ãƒ¡ã‚½ãƒƒãƒ‰ã‚’å‘¼ã¶
        print(f"é¤¡: {self.filling}")
        print(f"é‡ã•: {self.weight}g")
    
    def serve(self):
        """å¤§ç¦ã®æä¾›ï¼ˆã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ï¼‰"""
        return f"ğŸ¡ {self.name}ã‚’ãŠçš¿ã«è¼‰ã›ã¦ãŠå‡ºã—ã—ã¾ã™"


```python
    
    def taste(self):
        """å‘³ã‚ã†"""
        return f"ã‚‚ã¡ã‚‚ã¡ï¼{self.filling}ãŒç¾å‘³ã—ã„ï¼"


# === å­ã‚¯ãƒ©ã‚¹2ï¼ˆDaifukuã‚’ç¶™æ‰¿ï¼‰ ===
class PremiumDaifuku(Daifuku):
    """ãƒ—ãƒ¬ãƒŸã‚¢ãƒ å¤§ç¦ã‚¯ãƒ©ã‚¹"""
    
    def __init__(self, name, price, filling, weight, special_ingredient):
        super().__init__(name, price, filling, weight)
        self.special_ingredient = special_ingredient
        self.is_limited = True
    
    def show_info(self):
        """ãƒ—ãƒ¬ãƒŸã‚¢ãƒ å¤§ç¦ã®æƒ…å ±ï¼ˆã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ï¼‰"""
        print("âœ¨ ãƒ—ãƒ¬ãƒŸã‚¢ãƒ å•†å“ âœ¨")
        super().show_info()  # è¦ªï¼ˆDaifukuï¼‰ã®ãƒ¡ã‚½ãƒƒãƒ‰
        print(f"ç‰¹åˆ¥ç´ æ: {self.special_ingredient}")
        print(f"é™å®šå“: ã¯ã„")
    
    def serve(self):
        """ãƒ—ãƒ¬ãƒŸã‚¢ãƒ å¤§ç¦ã®æä¾›ï¼ˆã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ï¼‰"""
        return f"ğŸŒŸ {self.name}ã‚’é«˜ç´šçš¿ã«ç››ã‚Šä»˜ã‘ã¦ãŠå‡ºã—ã—ã¾ã™"
    
    def taste(self):
        """ãƒ—ãƒ¬ãƒŸã‚¢ãƒ ãªå‘³ã‚ã„ï¼ˆã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ï¼‰"""
        return f"æ¥µä¸Šã‚‚ã¡ã‚‚ã¡ï¼{self.filling}ã¨{self.special_ingredient}ã®è´…æ²¢ãªãƒãƒ¼ãƒ¢ãƒ‹ãƒ¼ï¼"
    
    def gift_wrap(self):
        """ã‚®ãƒ•ãƒˆåŒ…è£…ï¼ˆãƒ—ãƒ¬ãƒŸã‚¢ãƒ é™å®šãƒ¡ã‚½ãƒƒãƒ‰ï¼‰"""
        return f"ğŸ {self.name}ã‚’é«˜ç´šæ¡ç®±ã«å…¥ã‚Œã¦ãƒªãƒœãƒ³ã‚’ã‹ã‘ã¾ã—ãŸ"


# === å­ã‚¯ãƒ©ã‚¹3ï¼ˆDaifukuã‚’ç¶™æ‰¿ï¼‰ ===
class IceDaifuku(Daifuku):
    """ã‚¢ã‚¤ã‚¹å¤§ç¦ã‚¯ãƒ©ã‚¹"""
    
    def __init__(self, name, price, filling, weight, ice_flavor):
        super().__init__(name, price, filling, weight)
        self.ice_flavor = ice_flavor
        self.frozen = True
    
    def show_info(self):
        """ã‚¢ã‚¤ã‚¹å¤§ç¦ã®æƒ…å ±ï¼ˆã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ï¼‰"""
        super().show_info()
        print(f"ã‚¢ã‚¤ã‚¹: {self.ice_flavor}")
        print(f"å†·å‡çŠ¶æ…‹: {'ã¯ã„' if self.frozen else 'ã„ã„ãˆ'}")
    
    def serve(self):
        """ã‚¢ã‚¤ã‚¹å¤§ç¦ã®æä¾›ï¼ˆã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ï¼‰"""
        return f"ğŸ§Š {self.name}ã‚’å†·å‡çŠ¶æ…‹ã§ãŠå‡ºã—ã—ã¾ã™"
    
    def taste(self):
        """ã‚¢ã‚¤ã‚¹å¤§ç¦ã®å‘³ã‚ã„ï¼ˆã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ï¼‰"""
        if self.frozen:
            return f"ã²ã‚“ã‚„ã‚Šå†·ãŸã„ï¼{self.ice_flavor}ã‚¢ã‚¤ã‚¹ã¨ã‚‚ã¡ã‚‚ã¡ã®çµ¶å¦™ãªçµ„ã¿åˆã‚ã›ï¼"
        else:
            return f"æº¶ã‘ã¦ã—ã¾ã„ã¾ã—ãŸ..."
    
    def defrost(self, minutes=5):
        """è§£å‡ã™ã‚‹ï¼ˆã‚¢ã‚¤ã‚¹å¤§ç¦é™å®šãƒ¡ã‚½ãƒƒãƒ‰ï¼‰"""
        if self.frozen:
            print(f"ğŸŒ¡ï¸ {self.name}ã‚’{minutes}åˆ†è§£å‡ã—ã¾ã—ãŸ")
            self.frozen = False
        else:
            print("æ—¢ã«è§£å‡æ¸ˆã¿ã§ã™")


# === å­ã‚¯ãƒ©ã‚¹4ï¼ˆProductã‚’ç›´æ¥ç¶™æ‰¿ï¼‰ ===
class Drink(Product):
    """é£²ã¿ç‰©ã‚¯ãƒ©ã‚¹"""
    
    def __init__(self, name, price, volume, temperature):
        super().__init__(name, price, "é£²ã¿ç‰©")
        self.volume = volume  # å®¹é‡ï¼ˆmlï¼‰
        self.temperature = temperature  # æ¸©åº¦ï¼ˆhot/coldï¼‰
    
    def show_info(self):
        """é£²ã¿ç‰©ã®æƒ…å ±ï¼ˆã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ï¼‰"""
        super().show_info()
        print(f"å®¹é‡: {self.volume}ml")
        print(f"æ¸©åº¦: {self.temperature}")
    
    def serve(self):
        """é£²ã¿ç‰©ã®æä¾›ï¼ˆã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ï¼‰"""
        temp_icon = "ğŸ”¥" if self.temperature == "hot" else "ğŸ§Š"
        return f"{temp_icon} {self.name}ã‚’ã‚°ãƒ©ã‚¹ã«æ³¨ã„ã§ãŠå‡ºã—ã—ã¾ã™"
    
    def taste(self):
        """é£²ã¿ç‰©ã®å‘³ã‚ã„"""
        return f"ã‚´ã‚¯ã‚´ã‚¯ï¼{self.name}ãŒç¾å‘³ã—ã„ï¼"


# === åº—é•·ã‚¯ãƒ©ã‚¹ ===
class StoreManager:
    """ã†ã•ã†ã•åº—é•·ã‚¯ãƒ©ã‚¹"""
    
    def __init__(self, name):
        self.name = name
        self.inventory = []  # åœ¨åº«
        self.sales_history = []  # è²©å£²å±¥æ­´
        print(f"ğŸ° {name}ãŒåº—é•·ã«å°±ä»»ã—ã¾ã—ãŸï¼\n")
    
    def greet(self):
        """æŒ¨æ‹¶"""
        return f"ğŸ° ã„ã‚‰ã£ã—ã‚ƒã„ã¾ã›ï¼åº—é•·ã®{self.name}ã§ã™"
    
    def add_product(self, product, quantity=10):
        """å•†å“ã‚’åœ¨åº«ã«è¿½åŠ """
        self.inventory.append(product)
        product.stock = quantity
        print(f"ğŸ“¦ {product.name}ã‚’{quantity}å€‹å…¥è·ã—ã¾ã—ãŸ")
    
    def show_inventory(self):
        """åœ¨åº«ä¸€è¦§"""
        print(f"\n{'='*60}")
        print(f"ğŸ“¦ {self.name}ã®åœ¨åº«ä¸€è¦§")
        print(f"{'='*60}\n")
        
        if not self.inventory:
            print("åœ¨åº«ãªã—")
            return
        
        # ã‚«ãƒ†ã‚´ãƒªåˆ¥ã«è¡¨ç¤º
        categories = {}
        for product in self.inventory:
            if product.category not in categories:
                categories[product.category] = []
            categories[product.category].append(product)
        
        for category, products in categories.items():
            print(f"--- {category} ---")
            for p in products:
                stock_status = "âœ…" if p.stock > 0 else "âŒ"
                print(f"{stock_status} {p} (åœ¨åº«: {p.stock})")
            print()
    
    def serve_customer(self, product, quantity=1):
        """
        ãŠå®¢æ§˜ã«å•†å“ã‚’æä¾›ï¼ˆãƒãƒªãƒ¢ãƒ¼ãƒ•ã‚£ã‚ºãƒ ï¼‰
        ã©ã‚“ãªç¨®é¡ã®å•†å“ã§ã‚‚åŒã˜ã‚ˆã†ã«æ‰±ãˆã‚‹
        """
        print(f"\nğŸ° {self.name}: ã„ã‚‰ã£ã—ã‚ƒã„ã¾ã›ï¼")
        
        # åœ¨åº«ãƒã‚§ãƒƒã‚¯
        if product.stock < quantity:
            print(f"âŒ ç”³ã—è¨³ã”ã–ã„ã¾ã›ã‚“ã€‚{product.name}ã®åœ¨åº«ãŒè¶³ã‚Šã¾ã›ã‚“")
            return False
        
        # åœ¨åº«ã‚’æ¸›ã‚‰ã™
        product.stock -= quantity
        
        # æ³¨æ–‡å†…å®¹
        total = product.price * quantity
        print(f"   {product.name} Ã— {quantity}å€‹")
        print(f"   åˆè¨ˆ: Â¥{total:,}")
        
        # æä¾›æ–¹æ³•ï¼ˆãƒãƒªãƒ¢ãƒ¼ãƒ•ã‚£ã‚ºãƒ ï¼ï¼‰
        serve_msg = product.serve()  # å‹ã«ã‚ˆã£ã¦ç•°ãªã‚‹å‹•ä½œ
        print(f"   {serve_msg}")
        
        # å‘³ã®èª¬æ˜ï¼ˆãƒãƒªãƒ¢ãƒ¼ãƒ•ã‚£ã‚ºãƒ ï¼ï¼‰
        taste_msg = product.taste()  # å‹ã«ã‚ˆã£ã¦ç•°ãªã‚‹å‹•ä½œ
        print(f"   {taste_msg}")
        
        # ãƒ—ãƒ¬ãƒŸã‚¢ãƒ å•†å“ãªã‚‰ç‰¹åˆ¥å¯¾å¿œ
        if isinstance(product, PremiumDaifuku):
            gift_msg = product.gift_wrap()
            print(f"   {gift_msg}")
        
        # è²©å£²å±¥æ­´ã«è¨˜éŒ²
        self.sales_history.append({
            "product": product,
            "quantity": quantity,
            "total": total
        })
        
        print(f"   ã‚ã‚ŠãŒã¨ã†ã”ã–ã„ã¾ã—ãŸï¼ğŸ°\n")
        return True
    
    def show_sales_report(self):
        """è²©å£²ãƒ¬ãƒãƒ¼ãƒˆ"""
        print(f"\n{'='*60}")
        print(f"ğŸ’° {self.name}ã®è²©å£²ãƒ¬ãƒãƒ¼ãƒˆ")
        print(f"{'='*60}\n")
        
        if not self.sales_history:
            print("è²©å£²å±¥æ­´ãªã—")
            return
        
        total_sales = 0
        total_items = 0
        
        for i, sale in enumerate(self.sales_history, 1):
            product = sale["product"]
            quantity = sale["quantity"]
            price = sale["total"]
            
            print(f"{i}. {product.name} Ã— {quantity}å€‹ = Â¥{price:,}")
            total_sales += price
            total_items += quantity
        
        print(f"\n{'='*60}")
        print(f"è²©å£²æ•°: {total_items}å€‹")
        print(f"å£²ä¸Šåˆè¨ˆ: Â¥{total_sales:,}")
        print(f"{'='*60}\n")
    
    def recommend_by_category(self, category):
        """ã‚«ãƒ†ã‚´ãƒªåˆ¥ãŠã™ã™ã‚"""
        print(f"\nğŸ’¡ {category}ã®ãŠã™ã™ã‚:")
        
        found = [p for p in self.inventory if p.category == category and p.stock > 0]
        
        if not found:
            print(f"  {category}ã®åœ¨åº«ãŒã‚ã‚Šã¾ã›ã‚“")
            return
        
        for product in found:
            print(f"  ãƒ»{product.name} Â¥{product.price} (åœ¨åº«: {product.stock})")


# === ã‚·ã‚¹ãƒ†ãƒ å®Ÿè¡Œ ===

print("="*70)
print("ğŸª ãµã‚ãµã‚å¤§ç¦åº— ç·åˆã‚·ã‚¹ãƒ†ãƒ ")
print("="*70)
