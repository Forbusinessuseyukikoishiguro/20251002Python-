# main.py
"""
ãƒ‘ãƒƒã‚±ãƒ¼ã‚¸ã‚’ä½¿ã†ãƒ¡ã‚¤ãƒ³ãƒ—ãƒ­ã‚°ãƒ©ãƒ 
"""

# æ–¹æ³•1: ãƒ‘ãƒƒã‚±ãƒ¼ã‚¸å…¨ä½“ã‚’ã‚¤ãƒ³ãƒãƒ¼ãƒˆ
import shop  # shopãƒ‘ãƒƒã‚±ãƒ¼ã‚¸

print(f"åº—å: {shop.SHOP_NAME}")
print(f"ãƒãƒ¼ã‚¸ãƒ§ãƒ³: {shop.__version__}")
