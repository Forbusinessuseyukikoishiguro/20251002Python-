### ğŸ“„ shop/utils/formatters.py

```python
# shop/utils/formatters.py
"""
ãƒ•ã‚©ãƒ¼ãƒãƒƒãƒˆé–¢é€£ã®ãƒ¦ãƒ¼ãƒ†ã‚£ãƒªãƒ†ã‚£
"""

def format_price(price):
    """ä¾¡æ ¼ã‚’ãƒ•ã‚©ãƒ¼ãƒãƒƒãƒˆ"""
    return f"Â¥{price:,}"

def format_date(dt):
    """æ—¥æ™‚ã‚’ãƒ•ã‚©ãƒ¼ãƒãƒƒãƒˆ"""
    return dt.strftime("%Yå¹´%mæœˆ%dæ—¥ %H:%M:%S")

def format_percentage(value):
    """ãƒ‘ãƒ¼ã‚»ãƒ³ãƒ†ãƒ¼ã‚¸ã‚’ãƒ•ã‚©ãƒ¼ãƒãƒƒãƒˆ"""
    return f"{value:.1%}"

def format_weight(grams):
    """é‡ã•ã‚’ãƒ•ã‚©ãƒ¼ãƒãƒƒãƒˆ"""
    return f"{grams}g"

def create_receipt(items, tax_rate=0.10):
    """ãƒ¬ã‚·ãƒ¼ãƒˆã‚’ç”Ÿæˆ"""
    lines = []
    lines.append("="*40)
    lines.append("    ãµã‚ãµã‚å¤§ç¦åº—    ")
    lines.append("="*40)
    lines.append("")
    
    subtotal = 0
    for item in items:
        name = item["name"]
        price = item["price"]
        qty = item["quantity"]
        item_total = price * qty
        
        lines.append(f"{name}")
        lines.append(f"  {format_price(price)} Ã— {qty}å€‹")
        lines.append(f"  å°è¨ˆ: {format_price(item_total)}")
        lines.append("")
        
        subtotal += item_total
    
    tax = int(subtotal * tax_rate)
    total = subtotal + tax
    
    lines.append("-"*40)
    lines.append(f"å°è¨ˆ:     {format_price(subtotal):>20}")
    lines.append(f"æ¶ˆè²»ç¨:   {format_price(tax):>20}")
    lines.append(f"åˆè¨ˆ:     {format_price(total):>20}")
    lines.append("="*40)
    
    import datetime
    lines.append(format_date(datetime.datetime.now()))
    lines.append("      ã‚ã‚ŠãŒã¨ã†ã”ã–ã„ã¾ã—ãŸï¼")
    lines.append("="*40)
    
    return "\n".join(lines)
```

