class Character:
    """ã‚­ãƒ£ãƒ©ã‚¯ã‚¿ãƒ¼ã‚¯ãƒ©ã‚¹ï¼ˆè¦ªï¼‰"""
    
    def __init__(self, name, hp, attack):
        self.name = name      # åå‰
        self.__hp = hp        # HPï¼ˆprivateï¼‰
        self.attack = attack  # æ”»æ’ƒåŠ›
    
    def get_hp(self):
        """HPã‚’å–å¾—"""
        return self.__hp
    
    def take_damage(self, damage):
        """ãƒ€ãƒ¡ãƒ¼ã‚¸ã‚’å—ã‘ã‚‹"""
        self.__hp -= damage
        if self.__hp < 0:
            self.__hp = 0
        return f"{self.name}ã¯{damage}ã®ãƒ€ãƒ¡ãƒ¼ã‚¸ã‚’å—ã‘ãŸï¼ï¼ˆæ®‹ã‚ŠHP: {self.__hp}ï¼‰"
    
    def is_alive(self):
        """ç”Ÿãã¦ã„ã‚‹ã‹"""
        return self.__hp > 0
    
    def special_attack(self):
        """ç‰¹æ®Šæ”»æ’ƒï¼ˆå­ã‚¯ãƒ©ã‚¹ã§ã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ï¼‰"""
        return f"{self.name}ã®æ”»æ’ƒï¼"

class Warrior(Character):
    """æˆ¦å£«ã‚¯ãƒ©ã‚¹ï¼ˆå­ï¼‰"""
    
    def special_attack(self):
        """ç‰¹æ®Šæ”»æ’ƒã‚’ã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰"""
        return f"{self.name}ã®å‰£æŠ€ï¼ãƒ€ãƒ¡ãƒ¼ã‚¸: {self.attack * 2}"

class Mage(Character):
    """é­”æ³•ä½¿ã„ã‚¯ãƒ©ã‚¹ï¼ˆå­ï¼‰"""
    
    def __init__(self, name, hp, attack, mp):
        super().__init__(name, hp, attack)
        self.__mp = mp  # é­”æ³•ä½¿ã„ç‹¬è‡ªã®å±æ€§
    
    def special_attack(self):
        """ç‰¹æ®Šæ”»æ’ƒã‚’ã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰"""
        if self.__mp >= 10:
            self.__mp -= 10
            return f"{self.name}ã®é­”æ³•ï¼ãƒ€ãƒ¡ãƒ¼ã‚¸: {self.attack * 3}"
        return f"{self.name}ã¯MPãŒè¶³ã‚Šãªã„ï¼"

# ã‚²ãƒ¼ãƒ ã®å®Ÿè¡Œ
print("\nâ–  ãƒãƒˆãƒ«é–‹å§‹")
warrior = Warrior("å‹‡è€…", 100, 20)
mage = Mage("é­”æ³•ä½¿ã„", 80, 15, 50)

print(warrior.special_attack())  # ãƒãƒªãƒ¢ãƒ¼ãƒ•ã‚£ã‚ºãƒ 
print(mage.special_attack())     # ãƒãƒªãƒ¢ãƒ¼ãƒ•ã‚£ã‚ºãƒ 

print(mage.take_damage(30))
print(f"{mage.name}ã¯ç”Ÿãã¦ã„ã‚‹ï¼Ÿ: {mage.is_alive()}")

print("\n" + "=" * 70)
print("ã“ã‚Œã§ã‚ªãƒ–ã‚¸ã‚§ã‚¯ãƒˆæŒ‡å‘ãƒã‚¹ã‚¿ãƒ¼ï¼")
print("=" * 70)

Pythonã®ã‚ªãƒ–ã‚¸ã‚§ã‚¯ãƒˆæŒ‡å‘ãƒ—ãƒ­ã‚°ãƒ©ãƒŸãƒ³ã‚°ã«ã¤ã„ã¦ã€è¶…è©³ã—ã„ã‚¬ã‚¤ãƒ‰ã‚’ä½œæˆã—ã¾ã—ãŸï¼

## ğŸ¯ è¶…ã‚·ãƒ³ãƒ—ãƒ«ã«ç†è§£

### ã‚¯ãƒ©ã‚¹ = è¨­è¨ˆå›³ã€ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹ = å®Ÿç‰©

```python
# ã‚¯ãƒ©ã‚¹ï¼ˆãŸã„ç„¼ãã®å‹ï¼‰
class Dog:
    def __init__(self, name):
        self.name = name

# ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹ï¼ˆå®Ÿéš›ã®ãŸã„ç„¼ãï¼‰
