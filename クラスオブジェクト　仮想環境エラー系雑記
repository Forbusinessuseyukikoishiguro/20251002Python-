import sys
import os

def diagnose_environment():
    """ä»®æƒ³ç’°å¢ƒã®çŠ¶æ…‹ã‚’è¨ºæ–­"""
    print("=" * 50)
    print("Pythonç’°å¢ƒè¨ºæ–­")
    print("=" * 50)
    
    # Pythonãƒãƒ¼ã‚¸ãƒ§ãƒ³
    print(f"\nã€Pythonãƒãƒ¼ã‚¸ãƒ§ãƒ³ã€‘")
    print(f"  {sys.version}")
    
    # å®Ÿè¡Œãƒ•ã‚¡ã‚¤ãƒ«ã®ãƒ‘ã‚¹
    print(f"\nã€Pythonã®å®Ÿè¡Œãƒ‘ã‚¹ã€‘")
    print(f"  {sys.executable}")
    
    # ä»®æƒ³ç’°å¢ƒå†…ã‹ã©ã†ã‹
    print(f"\nã€ä»®æƒ³ç’°å¢ƒã®çŠ¶æ…‹ã€‘")
    in_venv = (
        hasattr(sys, 'real_prefix') or
        (hasattr(sys, 'base_prefix') and sys.base_prefix != sys.prefix)
    )
    
    if in_venv:
        print("  âœ… ä»®æƒ³ç’°å¢ƒãŒæœ‰åŠ¹åŒ–ã•ã‚Œã¦ã„ã¾ã™")
        venv_path = os.environ.get('VIRTUAL_ENV', 'ãƒ‘ã‚¹ä¸æ˜')
        print(f"  ä»®æƒ³ç’°å¢ƒã®ãƒ‘ã‚¹: {venv_path}")
    else:
        print("  âŒ ä»®æƒ³ç’°å¢ƒãŒæœ‰åŠ¹åŒ–ã•ã‚Œã¦ã„ã¾ã›ã‚“")
        print("  â†’ activate ã‚’å®Ÿè¡Œã—ã¦ãã ã•ã„")
    
    # ãƒ¢ã‚¸ãƒ¥ãƒ¼ãƒ«æ¤œç´¢ãƒ‘ã‚¹
    print(f"\nã€ãƒ¢ã‚¸ãƒ¥ãƒ¼ãƒ«æ¤œç´¢ãƒ‘ã‚¹ï¼ˆæœ€åˆã®3ã¤ï¼‰ã€‘")
    for i, path in enumerate(sys.path[:3], 1):
        print(f"  {i}. {path}")
    
    # pip ã®ç¢ºèª
    print(f"\nã€pipã€‘")
    try:
        import pip
        print(f"  âœ… pipãŒåˆ©ç”¨å¯èƒ½")
        print(f"  pipãƒãƒ¼ã‚¸ãƒ§ãƒ³: {pip.__version__}")
    except ImportError:
        print(f"  âŒ pipãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“")
    
    # ã‚¤ãƒ³ã‚¹ãƒˆãƒ¼ãƒ«æ¸ˆã¿ãƒ‘ãƒƒã‚±ãƒ¼ã‚¸æ•°
    try:
        import pkg_resources
        installed = list(pkg_resources.working_set)
        print(f"\nã€ã‚¤ãƒ³ã‚¹ãƒˆãƒ¼ãƒ«æ¸ˆã¿ãƒ‘ãƒƒã‚±ãƒ¼ã‚¸ã€‘")
        print(f"  åˆè¨ˆ: {len(installed)}å€‹")
        print(f"  æœ€åˆã®5å€‹:")
        for pkg in sorted(installed, key=lambda x: x.key)[:5]:
            print(f"    - {pkg.key} {pkg.version}")
    except:
        print(f"  ãƒ‘ãƒƒã‚±ãƒ¼ã‚¸æƒ…å ±ã‚’å–å¾—ã§ãã¾ã›ã‚“")
    
    print("\n" + "=" * 50)
    
    # æ¨å¥¨ã‚¢ã‚¯ã‚·ãƒ§ãƒ³
    if not in_venv:
        print("\nã€æ¨å¥¨ã‚¢ã‚¯ã‚·ãƒ§ãƒ³ã€‘")
        print("  1. ä»®æƒ³ç’°å¢ƒã‚’ä½œæˆ: python -m venv venv")
        print("  2. æœ‰åŠ¹åŒ–:")
        print("     Windows: venv\\Scripts\\activate")
        print("     Mac/Linux: source venv/bin/activate")
    
    print()

# è¨ºæ–­å®Ÿè¡Œ
