# ==========================================================
# ã€3ã€‘public ã¨ private - ã‚«ãƒ—ã‚»ãƒ«åŒ–
# ==========================================================

print("\n" + "=" * 70)
print("ã€3ã€‘public ã¨ private - æƒ…å ±ã®éš è”½")
print("=" * 70)

class BankAccount:
    """éŠ€è¡Œå£åº§ã‚¯ãƒ©ã‚¹ - ã‚«ãƒ—ã‚»ãƒ«åŒ–ã®ä¾‹"""
    
    def __init__(self, owner, initial_balance=0):
        # publicå±æ€§ï¼ˆæ™®é€šã®å±æ€§ï¼‰
        self.owner = owner  # èª°ã§ã‚‚ã‚¢ã‚¯ã‚»ã‚¹å¯èƒ½
        
        # protectedå±æ€§ï¼ˆ_ã§å§‹ã¾ã‚‹ï¼‰æ…£ç¿’çš„ã«å†…éƒ¨ä½¿ç”¨
        self._account_number = "123-456-789"
        
        # privateå±æ€§ï¼ˆ__ã§å§‹ã¾ã‚‹ï¼‰å¤–éƒ¨ã‹ã‚‰ç›´æ¥ã‚¢ã‚¯ã‚»ã‚¹ä¸å¯
        self.__balance = initial_balance  # æ®‹é«˜ã¯éš ã™
    
    # publicãƒ¡ã‚½ãƒƒãƒ‰ï¼ˆå¤–éƒ¨ã‹ã‚‰ä½¿ãˆã‚‹ï¼‰
    def deposit(self, amount):
        """å…¥é‡‘ï¼ˆå…¬é–‹ãƒ¡ã‚½ãƒƒãƒ‰ï¼‰"""
        if amount > 0:
            self.__balance += amount  # privateã«ã‚¢ã‚¯ã‚»ã‚¹
            return f"{amount}å††ã‚’å…¥é‡‘ã—ã¾ã—ãŸ"
        return "å…¥é‡‘é¡ã¯æ­£ã®æ•°ã§ã‚ã‚‹å¿…è¦ãŒã‚ã‚Šã¾ã™"
    
    def withdraw(self, amount):
        """å‡ºé‡‘ï¼ˆå…¬é–‹ãƒ¡ã‚½ãƒƒãƒ‰ï¼‰"""
        if amount > self.__balance:
            return "æ®‹é«˜ä¸è¶³ã§ã™"
        self.__balance -= amount
        return f"{amount}å††ã‚’å‡ºé‡‘ã—ã¾ã—ãŸ"
    
    # getterï¼ˆprivateãªå€¤ã‚’å–å¾—ï¼‰
    def get_balance(self):
        """æ®‹é«˜ã‚’å–å¾—"""
        return self.__balance
    
    # setterï¼ˆprivateãªå€¤ã‚’è¨­å®šï¼‰
    def set_balance(self, amount):
        """æ®‹é«˜ã‚’è¨­å®šï¼ˆæ¤œè¨¼ä»˜ãï¼‰"""
        if amount >= 0:
            self.__balance = amount
        else:
            raise ValueError("æ®‹é«˜ã¯0ä»¥ä¸Šã§ã‚ã‚‹å¿…è¦ãŒã‚ã‚Šã¾ã™")
    
    # protectedãƒ¡ã‚½ãƒƒãƒ‰ï¼ˆ_ã§å§‹ã¾ã‚‹ï¼‰
    def _internal_process(self):
        """å†…éƒ¨å‡¦ç†ç”¨ãƒ¡ã‚½ãƒƒãƒ‰"""
        return "å†…éƒ¨å‡¦ç†ä¸­..."
    
    # privateãƒ¡ã‚½ãƒƒãƒ‰ï¼ˆ__ã§å§‹ã¾ã‚‹ï¼‰
    def __validate(self, amount):
        """æ¤œè¨¼ç”¨ã®ãƒ—ãƒ©ã‚¤ãƒ™ãƒ¼ãƒˆãƒ¡ã‚½ãƒƒãƒ‰"""
        return amount > 0

# --- ä½¿ç”¨ä¾‹ ---
print("\nâ–  public ã¨ private ã®å‹•ä½œ")
account = BankAccount("ç”°ä¸­å¤ªéƒ", 10000)

# publicå±æ€§ã¯ã‚¢ã‚¯ã‚»ã‚¹å¯èƒ½
print(f"å£åº§åç¾©: {account.owner}")  # OK

# publicãƒ¡ã‚½ãƒƒãƒ‰ã§æ“ä½œ
print(account.deposit(5000))         # OK
print(f"æ®‹é«˜: {account.get_balance()}å††")  # OK

# privateå±æ€§ã«ç›´æ¥ã‚¢ã‚¯ã‚»ã‚¹ã—ã‚ˆã†ã¨ã™ã‚‹ã¨...
# print(account.__balance)  # ã‚¨ãƒ©ãƒ¼ï¼AttributeError

# æ­£ã—ã„æ–¹æ³•: getterã‚’ä½¿ã†
print(f"æ®‹é«˜ï¼ˆæ­£ã—ã„æ–¹æ³•ï¼‰: {account.get_balance()}å††")

print("\nâ–  ã‚¢ã‚¯ã‚»ã‚¹åˆ¶å¾¡ã®ã¾ã¨ã‚")
print("""
â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¬â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¬â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”
â”‚ è¨˜æ³•        â”‚ åå‰       â”‚ ã‚¢ã‚¯ã‚»ã‚¹     â”‚
â”œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¼â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¼â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¤
â”‚ name        â”‚ public     â”‚ ã©ã“ã‹ã‚‰ã§ã‚‚ â”‚
â”‚ _name       â”‚ protected  â”‚ æ…£ç¿’çš„ã«å†…éƒ¨ â”‚
â”‚ __name      â”‚ private    â”‚ å¤–éƒ¨ä¸å¯     â”‚
â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”´â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”´â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜

æ³¨æ„: Pythonã«ã¯å³å¯†ãªprivateã¯ãªã„
     __name ã¯åå‰ãƒãƒ³ã‚°ãƒªãƒ³ã‚°ã§éš è”½ã•ã‚Œã‚‹ã ã‘
     _ClassName__name ã§ã‚¢ã‚¯ã‚»ã‚¹å¯èƒ½ï¼ˆéæ¨å¥¨ï¼‰
""")

# ==========================================================
# ã€4ã€‘ç¶™æ‰¿ - è¦ªå­é–¢ä¿‚
# ==========================================================

print("\n" + "=" * 70)
print("ã€4ã€‘ç¶™æ‰¿ - è¦ªã‚¯ãƒ©ã‚¹ã¨å­ã‚¯ãƒ©ã‚¹")
print("=" * 70)

# --- è¦ªã‚¯ãƒ©ã‚¹ï¼ˆåŸºåº•ã‚¯ãƒ©ã‚¹ï¼‰---
class Animal:
    """å‹•ç‰©ã‚¯ãƒ©ã‚¹ï¼ˆè¦ªï¼‰"""
    
    def __init__(self, name, age):
        self.name = name  # åå‰
        self.age = age    # å¹´é½¢
    
    def eat(self):
        """é£Ÿã¹ã‚‹ï¼ˆå…±é€šã®è¡Œå‹•ï¼‰"""
        return f"{self.name}ãŒé£Ÿã¹ã¦ã„ã¾ã™"
    
    def sleep(self):
        """å¯ã‚‹ï¼ˆå…±é€šã®è¡Œå‹•ï¼‰"""
        return f"{self.name}ãŒå¯ã¦ã„ã¾ã™"
    
    def speak(self):
        """é³´ãï¼ˆå­ã‚¯ãƒ©ã‚¹ã§ã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ã•ã‚Œã‚‹ï¼‰"""
        return f"{self.name}ãŒä½•ã‹éŸ³ã‚’å‡ºã—ã¦ã„ã¾ã™"

# --- å­ã‚¯ãƒ©ã‚¹1ï¼ˆæ´¾ç”Ÿã‚¯ãƒ©ã‚¹ï¼‰---
class Cat(Animal):  # Animalã‚’ç¶™æ‰¿
    """çŒ«ã‚¯ãƒ©ã‚¹ï¼ˆå­ï¼‰"""
    
    def __init__(self, name, age, color):
        # è¦ªã‚¯ãƒ©ã‚¹ã®ã‚³ãƒ³ã‚¹ãƒˆãƒ©ã‚¯ã‚¿ã‚’å‘¼ã¶
        super().__init__(name, age)
        # å­ã‚¯ãƒ©ã‚¹ç‹¬è‡ªã®å±æ€§
        self.color = color
    
    def speak(self):
        """ãƒ¡ã‚½ãƒƒãƒ‰ã®ã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ï¼ˆä¸Šæ›¸ãï¼‰"""
        return f"{self.name}ã€Œãƒ‹ãƒ£ãƒ¼ã€"
    
    def scratch(self):
        """çŒ«ç‹¬è‡ªã®ãƒ¡ã‚½ãƒƒãƒ‰"""
        return f"{self.name}ãŒçˆªã‚’ç ”ã„ã§ã„ã¾ã™"

# --- å­ã‚¯ãƒ©ã‚¹2 ---
class Bird(Animal):  # Animalã‚’ç¶™æ‰¿
    """é³¥ã‚¯ãƒ©ã‚¹ï¼ˆå­ï¼‰"""
    
    def __init__(self, name, age, can_fly=True):
        super().__init__(name, age)
        self.can_fly = can_fly
    
    def speak(self):
        """ãƒ¡ã‚½ãƒƒãƒ‰ã®ã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰"""
        return f"{self.name}ã€Œãƒ”ãƒ¨ãƒ”ãƒ¨ã€"
    
    def fly(self):
        """é³¥ç‹¬è‡ªã®ãƒ¡ã‚½ãƒƒãƒ‰"""
        if self.can_fly:
            return f"{self.name}ãŒé£›ã‚“ã§ã„ã¾ã™"
        return f"{self.name}ã¯é£›ã¹ã¾ã›ã‚“"

# --- ä½¿ç”¨ä¾‹ ---
print("\nâ–  ç¶™æ‰¿ã®å‹•ä½œç¢ºèª")
cat = Cat("ã‚¿ãƒ", 3, "ä¸‰æ¯›")
bird = Bird("ãƒ”ãƒ¼ã¡ã‚ƒã‚“", 1, can_fly=True)

# è¦ªã‚¯ãƒ©ã‚¹ã®ãƒ¡ã‚½ãƒƒãƒ‰ãŒä½¿ãˆã‚‹
print(cat.eat())    # Animalã‹ã‚‰ç¶™æ‰¿
print(bird.sleep()) # Animalã‹ã‚‰ç¶™æ‰¿

# å­ã‚¯ãƒ©ã‚¹ã§ã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ã•ã‚ŒãŸãƒ¡ã‚½ãƒƒãƒ‰
print(cat.speak())  # ãƒ‹ãƒ£ãƒ¼
print(bird.speak()) # ãƒ”ãƒ¨ãƒ”ãƒ¨

# å­ã‚¯ãƒ©ã‚¹ç‹¬è‡ªã®ãƒ¡ã‚½ãƒƒãƒ‰
print(cat.scratch())  # çŒ«ã ã‘
print(bird.fly())     # é³¥ã ã‘

print("\nâ–  ç¶™æ‰¿ã®ãƒ¡ãƒªãƒƒãƒˆ")
print("""
âœ… ã‚³ãƒ¼ãƒ‰ã®å†åˆ©ç”¨
   å…±é€šéƒ¨åˆ†ï¼ˆeat, sleepï¼‰ã¯è¦ªã«æ›¸ãã ã‘
   
âœ… éšå±¤æ§‹é€ 
   Animal
   â”œâ”€â”€ Cat
   â”œâ”€â”€ Dog
   â””â”€â”€ Bird
   
âœ… æ‹¡å¼µãŒå®¹æ˜“
   æ–°ã—ã„å‹•ç‰©ã‚’è¿½åŠ ã—ã‚„ã™ã„
   
âœ… ä¿å®ˆæ€§
   å…±é€šå‡¦ç†ã®å¤‰æ›´ãŒ1ç®‡æ‰€ã§æ¸ˆã‚€
""")

# ==========================================================
# ã€5ã€‘ãƒãƒªãƒ¢ãƒ¼ãƒ•ã‚£ã‚ºãƒ  - å¤šæ…‹æ€§
# ==========================================================

print("\n" + "=" * 70)
print("ã€5ã€‘ãƒãƒªãƒ¢ãƒ¼ãƒ•ã‚£ã‚ºãƒ  - åŒã˜å‘½ä»¤ã§é•ã†å‹•ã")
print("=" * 70)

# ãƒãƒªãƒ¢ãƒ¼ãƒ•ã‚£ã‚ºãƒ ã®å®Ÿæ¼”
def make_sound(animal):
    """ã©ã‚“ãªå‹•ç‰©ã§ã‚‚é³´ã‹ã›ã‚‹é–¢æ•°"""
    print(animal.speak())  # åŒã˜ãƒ¡ã‚½ãƒƒãƒ‰åã‚’å‘¼ã¶ã ã‘

# ç•°ãªã‚‹ç¨®é¡ã®å‹•ç‰©ã‚’ä½œæˆ
animals = [
    Cat("ãƒŸã‚±", 2, "ä¸‰æ¯›"),
    Bird("ãƒãƒƒãƒ", 1, True),
    Cat("ã‚¯ãƒ­", 4, "é»’"),
    Bird("ãƒšãƒ³ãƒšãƒ³", 3, False)
]

print("\nâ–  ãƒãƒªãƒ¢ãƒ¼ãƒ•ã‚£ã‚ºãƒ ã®å®Ÿæ¼”")
for animal in animals:
    make_sound(animal)  # åŒã˜é–¢æ•°ã§é•ã†çµæœï¼

print("\nâ–  ãƒãƒªãƒ¢ãƒ¼ãƒ•ã‚£ã‚ºãƒ ã¨ã¯")
