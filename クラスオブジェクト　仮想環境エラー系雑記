class Parent:
    """è¦ªã‚¯ãƒ©ã‚¹"""
    def greet(self):
        return "ã“ã‚“ã«ã¡ã¯ï¼ˆè¦ªï¼‰"

class Child(Parent):
    """å­ã‚¯ãƒ©ã‚¹"""
    def greet(self):
        """è¦ªã®ãƒ¡ã‚½ãƒƒãƒ‰ã‚’ã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰"""
        return "ã“ã‚“ã«ã¡ã¯ï¼ˆå­ï¼‰"

parent = Parent()
child = Child()
print(f"è¦ª: {parent.greet()}")  # ã“ã‚“ã«ã¡ã¯ï¼ˆè¦ªï¼‰
print(f"å­: {child.greet()}")   # ã“ã‚“ã«ã¡ã¯ï¼ˆå­ï¼‰â† ä¸Šæ›¸ãã•ã‚ŒãŸ

# --- ã‚ªãƒ¼ãƒãƒ¼ãƒ­ãƒ¼ãƒ‰ï¼ˆPythonã§ã¯ç‰¹æ®Šï¼‰---
print("\nâ–  ã‚ªãƒ¼ãƒãƒ¼ãƒ­ãƒ¼ãƒ‰ï¼ˆPythonã®æ–¹æ³•ï¼‰")

class Calculator:
    """è¨ˆç®—æ©Ÿã‚¯ãƒ©ã‚¹"""
    
    # Pythonã«ã¯å³å¯†ãªã‚ªãƒ¼ãƒãƒ¼ãƒ­ãƒ¼ãƒ‰ãŒãªã„
    # ãƒ‡ãƒ•ã‚©ãƒ«ãƒˆå¼•æ•°ã§å®Ÿç¾
    def add(self, a, b=0, c=0):
        """
        å¼•æ•°ã®æ•°ã«å¿œã˜ã¦å‹•ä½œãŒå¤‰ã‚ã‚‹
        add(5)      â†’ 5 + 0 + 0 = 5
        add(5, 3)   â†’ 5 + 3 + 0 = 8
        add(5, 3, 2) â†’ 5 + 3 + 2 = 10
        """
        return a + b + c
    
    # å¯å¤‰é•·å¼•æ•°ã§ã‚‚å®Ÿç¾å¯èƒ½
    def multiply(self, *args):
        """
        ä»»æ„ã®å€‹æ•°ã®å¼•æ•°ã‚’æ›ã‘ç®—
        multiply(2, 3)       â†’ 6
        multiply(2, 3, 4)    â†’ 24
        multiply(2, 3, 4, 5) â†’ 120
        """
        result = 1
        for num in args:
            result *= num
        return result

calc = Calculator()
print(f"add(5): {calc.add(5)}")           # 5
print(f"add(5, 3): {calc.add(5, 3)}")     # 8
print(f"add(5, 3, 2): {calc.add(5, 3, 2)}")  # 10
print(f"multiply(2, 3): {calc.multiply(2, 3)}")        # 6
print(f"multiply(2, 3, 4): {calc.multiply(2, 3, 4)}")  # 24

print("\nâ–  ã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ vs ã‚ªãƒ¼ãƒãƒ¼ãƒ­ãƒ¼ãƒ‰")
print("""
â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¬â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”
â”‚ ã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ â”‚ è¦ªã®ãƒ¡ã‚½ãƒƒãƒ‰ã‚’å­ãŒä¸Šæ›¸ã â”‚
â”‚ (Override)   â”‚ ç¶™æ‰¿ã§ä½¿ã†             â”‚
â”œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¼â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¤
â”‚ ã‚ªãƒ¼ãƒãƒ¼ãƒ­ãƒ¼ãƒ‰ â”‚ åŒã˜åå‰ã§å¼•æ•°ãŒé•ã†   â”‚
â”‚ (Overload)   â”‚ Pythonã¯éå¯¾å¿œ*        â”‚
â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”´â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜

*Pythonã§ã¯:
  - ãƒ‡ãƒ•ã‚©ãƒ«ãƒˆå¼•æ•°
  - å¯å¤‰é•·å¼•æ•°ï¼ˆ*args, **kwargsï¼‰
  ã§ä¼¼ãŸã“ã¨ã‚’å®Ÿç¾
""")

