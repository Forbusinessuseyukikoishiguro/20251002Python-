class DaifukuShop:
    """å¤§ç¦åº—ã®è¦ªã‚¯ãƒ©ã‚¹"""
    def __init__(self, shop_name):
        # åº—åã‚’ä¿å­˜
        self.shop_name = shop_name
    
    def sell(self, quantity):
        """è²©å£²ãƒ¡ã‚½ãƒƒãƒ‰ï¼ˆå­ã‚¯ãƒ©ã‚¹ã§ä¸Šæ›¸ãã•ã‚Œã‚‹ï¼‰"""
        pass


class NormalShop(DaifukuShop):
    """é€šå¸¸åº—èˆ—"""
    def sell(self, quantity):
        """é€šå¸¸ä¾¡æ ¼ã§è²©å£²"""
        price = quantity * 150  # 1å€‹150å††
        print(f"ğŸª {self.shop_name}: {quantity}å€‹ã‚’Â¥{price}ã§è²©å£²ã—ã¾ã—ãŸ")
        return price


class PremiumShop(DaifukuShop):
    """ãƒ—ãƒ¬ãƒŸã‚¢ãƒ åº—èˆ—"""
    def sell(self, quantity):
        """ãƒ—ãƒ¬ãƒŸã‚¢ãƒ ä¾¡æ ¼ã§è²©å£²"""
        price = quantity * 200  # 1å€‹200å††ï¼ˆé«˜ç´šï¼‰
        print(f"âœ¨ {self.shop_name}: ãƒ—ãƒ¬ãƒŸã‚¢ãƒ å¤§ç¦{quantity}å€‹ã‚’Â¥{price}ã§è²©å£²ã—ã¾ã—ãŸ")
        return price


class DiscountShop(DaifukuShop):
    """ãƒ‡ã‚£ã‚¹ã‚«ã‚¦ãƒ³ãƒˆåº—èˆ—"""
    def sell(self, quantity):
        """å‰²å¼•ä¾¡æ ¼ã§è²©å£²"""
        price = quantity * 100  # 1å€‹100å††ï¼ˆå®‰ã„ï¼‰
        print(f"ğŸ’° {self.shop_name}: ãŠå¾—ãªå¤§ç¦{quantity}å€‹ã‚’Â¥{price}ã§è²©å£²ã—ã¾ã—ãŸ")
        return price


def process_order(shop, quantity):
    """
    ã©ã®åº—èˆ—ã§ã‚‚åŒã˜æ–¹æ³•ã§æ³¨æ–‡å‡¦ç†
    ã“ã‚ŒãŒãƒãƒªãƒ¢ãƒ¼ãƒ•ã‚£ã‚ºãƒ ï¼
    """
    print(f"\nğŸ“ {shop.shop_name}ã§æ³¨æ–‡å‡¦ç†é–‹å§‹...")
    # ã©ã®åº—èˆ—ã§ã‚‚ sell() ã‚’å‘¼ã¶ã ã‘
    # ã§ã‚‚ã€å®Ÿéš›ã®ä¾¡æ ¼ã¯åº—èˆ—ã«ã‚ˆã£ã¦é•ã†
    total = shop.sell(quantity)
    print(f"âœ… æ³¨æ–‡å®Œäº†: åˆè¨ˆÂ¥{total}")


print("\nã€ãƒ‡ãƒ¢ã€‘ã„ã‚ã‚“ãªåº—èˆ—ã§æ³¨æ–‡")
print("-" * 70)

# 3ç¨®é¡ã®åº—èˆ—ã‚’ä½œã‚‹
normal = NormalShop("ã†ã•ã†ã•åº—")
premium = PremiumShop("ã‚‚ã¡ã‚‚ã¡åº—")
discount = DiscountShop("å®‰ã„åº—")

# ã™ã¹ã¦åŒã˜é–¢æ•°ã§å‡¦ç†ã§ãã‚‹ï¼
process_order(normal, 5)    # é€šå¸¸åº—èˆ—
process_order(premium, 3)   # ãƒ—ãƒ¬ãƒŸã‚¢ãƒ åº—èˆ—
process_order(discount, 10) # ãƒ‡ã‚£ã‚¹ã‚«ã‚¦ãƒ³ãƒˆåº—èˆ—

