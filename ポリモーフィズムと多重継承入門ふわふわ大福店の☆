class BasicShop:
    """åŸºæœ¬çš„ãªåº—èˆ—æ©Ÿèƒ½"""
    def __init__(self):
        # åœ¨åº«ã‚’åˆæœŸåŒ–
        self.stock = 20
        print("ğŸª åº—èˆ—æ©Ÿèƒ½: åœ¨åº«ç®¡ç†ã‚·ã‚¹ãƒ†ãƒ èµ·å‹•")
    
    def sell(self, quantity):
        """å¤§ç¦ã‚’è²©å£²"""
        if quantity > self.stock:
            print(f"âŒ åœ¨åº«ä¸è¶³ï¼ï¼ˆæ®‹ã‚Š{self.stock}å€‹ï¼‰")
            return False
        
        # åœ¨åº«ã‚’æ¸›ã‚‰ã™
        self.stock -= quantity
        print(f"ğŸ’° {quantity}å€‹è²©å£²ã—ã¾ã—ãŸï¼ˆæ®‹ã‚Š{self.stock}å€‹ï¼‰")
        return True


class OnlineOrder:
    """ã‚ªãƒ³ãƒ©ã‚¤ãƒ³æ³¨æ–‡æ©Ÿèƒ½"""
    def __init__(self):
        # ã‚ªãƒ³ãƒ©ã‚¤ãƒ³æ³¨æ–‡æ•°ã‚’åˆæœŸåŒ–
        self.online_orders = 0
        print("ğŸŒ ã‚ªãƒ³ãƒ©ã‚¤ãƒ³æ³¨æ–‡ã‚·ã‚¹ãƒ†ãƒ èµ·å‹•")
    
    def receive_order(self, customer, quantity):
        """ã‚ªãƒ³ãƒ©ã‚¤ãƒ³æ³¨æ–‡ã‚’å—ã‘ä»˜ã‘"""
        self.online_orders += 1
        print(f"ğŸŒ ã‚ªãƒ³ãƒ©ã‚¤ãƒ³æ³¨æ–‡ #{self.online_orders}: {customer}æ§˜ {quantity}å€‹")


class DeliveryService:
    """é…é”ã‚µãƒ¼ãƒ“ã‚¹æ©Ÿèƒ½"""
    def __init__(self):
        # é…é”å›æ•°ã‚’åˆæœŸåŒ–
        self.deliveries = 0
        print("ğŸšš é…é”ã‚µãƒ¼ãƒ“ã‚¹èµ·å‹•")
    
    def deliver(self, address):
        """é…é”ã™ã‚‹"""
        self.deliveries += 1
        print(f"ğŸšš é…é” #{self.deliveries}: {address}ã¸é…é”ä¸­...")


class MemberSystem:
    """ä¼šå“¡ã‚·ã‚¹ãƒ†ãƒ æ©Ÿèƒ½"""
    def __init__(self):
        # ä¼šå“¡ãƒªã‚¹ãƒˆã‚’åˆæœŸåŒ–
        self.members = []
        print("ğŸ’³ ä¼šå“¡ã‚·ã‚¹ãƒ†ãƒ èµ·å‹•")
    
    def register(self, name):
        """ä¼šå“¡ç™»éŒ²"""
        self.members.append(name)
        print(f"ğŸ’³ {name}æ§˜ã‚’ä¼šå“¡ç™»éŒ²ã—ã¾ã—ãŸï¼ˆä¼šå“¡æ•°: {len(self.members)}åï¼‰")


# ã™ã¹ã¦ã®æ©Ÿèƒ½ã‚’æŒã¤ãƒã‚¤ãƒ–ãƒªãƒƒãƒ‰åº—èˆ—ï¼
class HybridShop(BasicShop, OnlineOrder, DeliveryService, MemberSystem):
    """
    ãƒã‚¤ãƒ–ãƒªãƒƒãƒ‰å¤§ç¦åº—ï¼ˆå¤šé‡ç¶™æ‰¿ï¼‰
    
    ç¶™æ‰¿å…ƒ:
