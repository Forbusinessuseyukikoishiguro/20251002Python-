# æ©Ÿèƒ½ã”ã¨ã«ã‚¯ãƒ©ã‚¹ã‚’åˆ†ã‘ã‚‹

class Phone:
    """é›»è©±ã®æ©Ÿèƒ½"""
    def call(self, number):
        """é›»è©±ã‚’ã‹ã‘ã‚‹"""
        print(f"ğŸ“ {number}ã«é›»è©±ã—ã¦ã„ã¾ã™...")


class Camera:
    """ã‚«ãƒ¡ãƒ©ã®æ©Ÿèƒ½"""
    def take_photo(self):
        """å†™çœŸã‚’æ’®ã‚‹"""
        print(f"ğŸ“· å†™çœŸã‚’æ’®ã‚Šã¾ã—ãŸï¼")


class MusicPlayer:
    """éŸ³æ¥½ãƒ—ãƒ¬ãƒ¼ãƒ¤ãƒ¼ã®æ©Ÿèƒ½"""
    def play_music(self, song):
        """éŸ³æ¥½ã‚’å†ç”Ÿ"""
        print(f"ğŸµ ã€Œ{song}ã€ã‚’å†ç”Ÿã—ã¦ã„ã¾ã™...")


class GPS:
    """GPSæ©Ÿèƒ½"""
    def get_location(self):
        """ç¾åœ¨åœ°ã‚’å–å¾—"""
        print(f"ğŸ“ ç¾åœ¨åœ°: æ±äº¬ã‚¿ãƒ¯ãƒ¼ä»˜è¿‘")


# ã‚¹ãƒãƒ¼ãƒˆãƒ•ã‚©ãƒ³ = ã™ã¹ã¦ã®æ©Ÿèƒ½ã‚’æŒã¤ï¼
class SmartPhone(Phone, Camera, MusicPlayer, GPS):
    """
    ã‚¹ãƒãƒ¼ãƒˆãƒ•ã‚©ãƒ³ï¼ˆå¤šé‡ç¶™æ‰¿ï¼‰
    
    ç¶™æ‰¿å…ƒ:
    - Phoneï¼ˆé›»è©±æ©Ÿèƒ½ï¼‰
    - Cameraï¼ˆã‚«ãƒ¡ãƒ©æ©Ÿèƒ½ï¼‰
    - MusicPlayerï¼ˆéŸ³æ¥½æ©Ÿèƒ½ï¼‰
    - GPSï¼ˆä½ç½®æƒ…å ±æ©Ÿèƒ½ï¼‰
    
    â†’ 4ã¤ã®è¦ªã‚¯ãƒ©ã‚¹ã‹ã‚‰å…¨æ©Ÿèƒ½ã‚’ç¶™æ‰¿ï¼
    """
    def __init__(self, model):
        # ã‚¹ãƒãƒ›ã®ãƒ¢ãƒ‡ãƒ«å
        self.model = model
        print(f"ğŸ“± {self.model}ã‚’èµ·å‹•ã—ã¾ã—ãŸ")


# ã‚¹ãƒãƒ¼ãƒˆãƒ•ã‚©ãƒ³ã‚’ä½œã‚‹
iphone = SmartPhone("iPhone 15")
print()

# ã™ã¹ã¦ã®æ©Ÿèƒ½ãŒä½¿ãˆã‚‹ï¼
iphone.call("090-1234-5678")        # Phone ã‹ã‚‰ç¶™æ‰¿
iphone.take_photo()                  # Camera ã‹ã‚‰ç¶™æ‰¿
iphone.play_music("æ˜¥ã®æ­Œ")          # MusicPlayer ã‹ã‚‰ç¶™æ‰¿
iphone.get_location()                # GPS ã‹ã‚‰ç¶™æ‰¿

print("\nâœ… ãƒ¡ãƒªãƒƒãƒˆ: ã™ã¹ã¦ã®æ©Ÿèƒ½ã‚’1ã¤ã«çµ±åˆï¼")
print()


