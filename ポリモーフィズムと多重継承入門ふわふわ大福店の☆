class Animal:
    """å‹•ç‰©ã®è¦ªã‚¯ãƒ©ã‚¹ï¼ˆåŸºåº•ã‚¯ãƒ©ã‚¹ï¼‰"""
    def __init__(self, name):
        # ã™ã¹ã¦ã®å‹•ç‰©ã«å…±é€šã®å±æ€§
        self.name = name
    
