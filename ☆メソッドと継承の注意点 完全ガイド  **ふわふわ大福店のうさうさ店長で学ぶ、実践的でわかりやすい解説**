    def __init__(self, name, age):
        # âŒ æ‚ªã„ä¾‹: è¦ªã®åˆæœŸåŒ–ã‚’å¿˜ã‚Œã‚‹
        self.age = age  # nameãŒåˆæœŸåŒ–ã•ã‚Œãªã„ï¼
        
